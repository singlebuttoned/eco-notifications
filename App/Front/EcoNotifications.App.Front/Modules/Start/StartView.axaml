<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:start="clr-namespace:EcoNotifications.App.Core.Modules.Start;assembly=EcoNotifications.App.Core"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EcoNotifications.App.Front.Modules.Start.StartView"
             x:DataType="start:StartViewModel">

    <UserControl.Styles>
        <StyleInclude Source="/Assets/Styles.axaml"/>
    </UserControl.Styles>

    <StackPanel>
        <Label Classes="Text11" Content="Error" IsVisible="{Binding IsError}" />
        <ProgressBar IsIndeterminate="True" IsVisible="{Binding IsLoading}" />
    </StackPanel>
</UserControl>